  import "../styles/mutual.css";
  import Mobilmenu from "../components/Mobilmenu.astro";
  import Category from "../components/Category.astro";
  import Footer from "../components/Footer.astro";
---
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="This is my wedding pictures"/>
    <link rel="icon" type="image/x-icon" href="logo.svg" />
    <title>Wedding</title>
  </head>
  <Mobilmenu/>
  <h1>Weddings</h1>
  <div id="grid-container">
    {data.map((portfolio) => <Category image={`/${portfolio.image}`}/>)}
  </div>
  <Footer/>
  <style>
    h1 {
          display: inline;
          border-bottom: 1px solid;
          padding-bottom: 3px;
          font-family: "Overskrift";
          font-weight: lighter;
          margin-left: 1rem;
          margin-top: 70px;
          font-size: 28px;
          position: absolute;
          left: 50%;
    transform: translate(-50%, -50%);
    grid-column: 1 / -1;
  }
  
  #grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        grid-gap: 10px;
        margin: 20%;
      }
      @media (max-width: 700px){
        #image{
          width: 100px;
          margin: auto;
        }
      }
  
  
      @media (min-width: 800px) {
      #grid-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-gap: 20px;
        margin: auto;
        margin-top: 10rem;
        margin-bottom: 2rem;
        max-width: 800px;
      }
  
      img{
        width: 800px;
        height: auto;
      }
  }
  </style>
</html>
