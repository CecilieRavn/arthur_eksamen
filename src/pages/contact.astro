---
import "../styles/mutual.css";
import Form from "../components/Form.astro";
import Header2 from "../components/Header2.astro";
---
<Header2/>
<section class="grid_1-1">
    <div>
        <div class="container">
            <img src="public/outside-2.webp" alt="Portrait of Arthur">
            <div class="overlay">
                <p>"Fascinated by people"</p>
            </div>
        </div>
    </div>
    <Form/>
</section>

<style>
.grid_1-1 {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
}

img {
   width: 100%;
   opacity: 70%;
   
}

.container {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
}

.overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
}

p {
    font-family: "Overskrift";
    font-weight: 400;
    text-align: center;
}
</style>