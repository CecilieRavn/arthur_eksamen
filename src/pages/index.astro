---
import "../styles/mutual.css";
import Menu from "../components/Menu.astro";
import Footer from "../components/Footer.astro";
import Galleri from "../components/Galleri.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="I love to photograph a lot of different people og ordience. Photography is a game for me"
    />
    <link rel="icon" type="image/x-icon" href="/logo.svg" />
    <title>Arthur</title>
  </head>
  <body>
    <main>
      <header id="landing">
        <div class="containerlanding">
          <Menu />
          <h1></h1>
          <div class="indicator">
            <span></span>
            <span></span>
          </div>
        </div>
      </header>
      <h2 class="centering">Fascinated by people</h2>
      <!--<section id="section">
        <Gallerifiks />
      </section>-->

      <Galleri/>
      <Footer />
      <script src="../scripts/script.js"></script>
      <script src="../scripts/burger.js"></script>

      <style>
        body {
          margin: 0;
          padding: 0;
        }
        img {
          width: 20%;
        }

        .centering {
          text-align: center;
          padding-bottom: 50px;
        }
        #landing {
          height: 100vh;
          background-image: url(/public/landing.webp);
          background-size: cover;
          background-position: center;
          display: flex;
          flex-direction: column;
          justify-content: flex-end;
          padding: 20px;
          animation: fadeAnimation 50s ease-in-out;
        }

        .containerlanding {
          text-align: center;
        }

        h1 {
          margin-bottom: 20px;
          color: #fff;
        }

        .indicator {
          position: relative;
          width: 30px;
          height: 30px;
          transform: rotate(45deg);
          margin: auto;
        }

        .indicator span {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          box-sizing: border-box;
          border: none;
          display: block;
          border-right: 3px solid #fff;
          border-bottom: 3px solid #fff;
          animation: animate 3s linear infinite;
        }

        .indicator span:nth-child(1) {
          top: -30px;
          left: -30px;
          animation-delay: 0s;
        }

        .indicator span:nth-child(2) {
          top: -15px;
          left: -15px;
          animation-delay: 0 2s;
        }

        @keyframes animate {
          0% {
            border-color: #fff;
            transform: translate();
          }
          100% {
            border-color: #8f8f8f;
            transform: translate(15px, 15px);
          }
          200,
          1%,
          100% {
            border-color: #222;
          }
        }

        #section {
          height: 100vh;
          background-color: #fff;
          text-align: center;
          padding-top: 20px;
        }

        h2 {
          margin-top: 100px;
          font-family: "Overskrift", sans-serif;
        }
        

        @keyframes fadeAnimation {
          0%,
          25% {
            opacity: 5;
          }
          45%,
          65% {
            opacity: 10;
          }
          100% {
            opacity: 5;
          }
        }
      </style>
    </main>
  </body>
</html>
