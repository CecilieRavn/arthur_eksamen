---
import "../styles/mutual.css";
import Menu from "../components/Menu.astro";
import Footer from "../components/Footer.astro";
import Galleri from "../components/Galleri.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Arthur Aizikovich"/>
    <link rel="icon" type="image/x-icon" href="logo.svg" />
    <title>Arthur</title>
  </head>
  <body>
    <main>
    <header id="landing">
      <div class="containerlanding">
        <Menu />
        <h1></h1>
        <div class="indicator">
          <span></span>
          <span></span>
    </div>
      </div>
    </header>

  
  
    <section id="section">
      <h2>Fascinated by people</h2>
      <Galleri/>
    </section>
    <Footer/>
    <script src="../scripts/script.js"></script>

    <style>
      body {
  margin: 0;
  padding: 0;
}
img{
  width: 20%;
}

#landing {
  height: 100vh;
  background-image: url(/public/landing.webp);
  background-size: cover;
  background-position: center;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 20px;
  animation: fadeAnimation 50s ease-in-out;
  
}

.containerlanding {
  text-align: center;
}

h1 {
  margin-bottom: 20px;
  color: #fff;
}


.indicator {
  position: relative;
  width: 30px ;
  height: 30px;
  transform: rotate(45deg);
  margin: auto;
}

.indicator span 
{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100% ;
  box-sizing: border-box;
  border: none;
  display: block;
  border-right: 3px solid #fff;
  border-bottom: 3px solid #fff;
  animation: animate 3s linear infinite;
}

.indicator span:nth-child(1)
{
  top: -30px ;
  left : -30px ;
  animation-delay : 0s ;

}

.indicator span:nth-child(2)
{
  top: -15px ;
  left : -15px ;
  animation-delay : 0. 2s ; 
}


@keyframes animate 
{
  0% {
    border-color: #fff ;
    transform: translate();
  }
  100% {
    border-color: #8f8f8f;
    transform: translate(15px , 15px);
  }
  200 , 1% , 100% {
    border-color: #222;
  }
}

#section {
  height: 100vh;
  background-color: #fff;
  text-align: center;
  padding-top: 50px;
}

h2 {
  margin-top: 100px;
  font-family: Overskrift;
}

@keyframes fadeAnimation {
  0%, 20% { opacity: 1; }

  25%, 95% { opacity: 0; }
  100% { opacity: 1; }
}



    </style>
    </main>
  </body>
</html>
