        margin: 50px;
      }
      @media (min-width: 800px) {
      #grid-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-gap: 20px;
        margin: auto;
        margin-top: 50px;
        margin-bottom: 2rem;
        max-width: 800px;
      }
    }
