---
const { image, } = Astro.props;
---
<h1 id="category">Fashion</h1>
<main id="grid-container">
     <!-- Left arrow 
 <div class="arrow left">&#60;</div>
 -->
    <div id="grid-item">
      <img class="image" src={image} alt="">
    </div>
    <!-- Right arrow 
 <div class="arrow right">&#62;</div>
 -->
</main>

  <style>
    #grid-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
      grid-gap: 10px;
      margin: 20%;
    }

    #grid-item {
      width: 100%;
      height: auto;
    }
    #category {
        display: inline;
        border-bottom: 1px solid;
        padding-bottom: 3px;
        font-family: "Overskrift";
        font-weight: lighter;
        margin-left: 1rem;
        margin-bottom: 10%;
        font-size: 28px;
        position: absolute;
        left: 50%;
  transform: translate(-50%, -50%);
  grid-column: 1 / -1; 
}
    
    #grid-item img {
      width: 8
      0%;
      height: auto;
    }

    @media (min-width: 800px) {
    #grid-container {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-gap: 20px;
      margin-left: 10rem;
      margin-right: 10rem;
      margin-top: 5rem;
      margin-bottom: 2rem;
    }
    
.grid-container .arrow {
  position: absolute;
  top: 80%;
  transform: translateY(-50%);
  color: black;
  padding: 10px;
  cursor: pointer;
  font-size: 50px;
  margin-left: 3rem;
  margin-right: 3rem;
}

#grid-container .arrow.left {
  left: 10px;
}

#grid-container .arrow.right {
  right: 10px;
}
    }
  </style>