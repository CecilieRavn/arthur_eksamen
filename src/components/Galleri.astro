<style>
@media (min-width: 700px) {
    .grid-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    margin: auto;
    align-content: center;
    max-width: 600px;
  }
  img {
    width: 150px;
    margin-right: 20px;
    margin-left: 20px;
    margin-top: 20px;
  }
}

@media (max-width: 700px) {
    .grid-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    margin: auto;
    align-content: center;
    max-width: 400px;
  }

  img {
    width: 100px;
    margin-right: 20px;
    margin-left: 20px;
    margin-top: 20px;
  }

}

  .container img {
    transition: transform 0.3s ease;
  }

  .container img:hover {
    transform: scale(1.2);
  }

  .grid-container {
    justify-items: center;
  }

  .container img {
    transform: 0.3s ease;
  }

  .container img:hover {
    transform: scale(1.2);
  }

  .container {
    text-align: center;
    color: #black;
    overflow: hidden;
  }

  img:hover {
    opacity: 20%;
  }

  a {
    text-decoration: none;
    color: var(--brand-color);
  }

  .centered {
    position: relative;
    top: -45%;
    font-family: "Overskrift";
    font-weight: 600;
    font-size: var(--font-xs);
  }

  @media (max-width: 500px) {
    img {
      margin-top: 15px;
    }
  }
</style>
