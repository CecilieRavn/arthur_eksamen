<div class="grid-container">
  <div class="container">
    <a href="events"><img src="/galleri1.webp" alt="events" /></a>
    <a href="events">
      <div class="centered">Events</div>
    </a>
  </div>
  <div class="container">
    <a href="fashion"><img src="/galleri2.webp" alt="fashion" /></a>
    <a href="fashion">
      <div class="centered">Fashion</div>
    </a>
  </div>
  <div class="container">
    <a href="portrait"><img src="/galleri3.webp" alt="portrait" /></a>
