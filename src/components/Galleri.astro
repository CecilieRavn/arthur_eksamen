---


<div class="grid-container">
    <div class="container">
        <a href="events"><img src="/galleri1.webp" alt="events"></a>
        <div class="centered">Events</div>
    </div>
    <div class="container">
        <a href="portfolio"><img src="/galleri2.webp" alt="fashion"></a>
        <div class="centered">Fashion</div>
    </div>
    <div class="container">
        <a href="portfolio"><img src="/galleri3.webp" alt="portrait"></a>
        <div class="centered">Portrait</div>
    </div>
    <div class="container">
        <a href="portfolio"><img src="/galleri4.webp" alt="wedding"></a>
        <div class="centered">Wedding</div>
    </div>
</div>

<style>
        .grid-container {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        margin: auto;
        align-content: center;
        max-width: 600px;
    } 
    

    .grid-container {
       justify-items: center; 
    }

    img {
        width: 200px;
        margin-bottom: 40px;
        margin-top: 40px;   
    }

    img:hover {
        opacity: 40%;
    }

    .container {
        position: relative;
        text-align: center; 
        color: #black;
    }

    .centered {
        position: absolute;
        top:50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    @media (max-width: 500px) {
        img {
            margin-top: 15px;
        }
    }
</style>